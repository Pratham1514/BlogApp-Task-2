<div class="form-group">
  <label for="title" class="fs-5 fw-semibold">Title</label>
  <input
    type="text"
    required
    name="title"
    class="form-control"
    value="<%= article.title %>"
  />
</div>
<div class="form-group mt-3">
  <label for="description" class="fs-5 fw-semibold">Description</label>
  <textarea name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
</div>
<div class="form-group mt-3">
  <label for="markdown" class="fs-5 fw-semibold">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
  >
</div>

<div class="mt-4">
  <a href="/" class="btn btn-secondary fs-5 fw-semibold">Cancel</a>
  <button type="submit" class="btn btn-primary fs-5 m-2">Save</button>
</div>
